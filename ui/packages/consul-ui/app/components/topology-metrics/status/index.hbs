{{#if (eq @noMetricsReason 'ingress-gateway')}}
  <span class="topology-metrics-error">
    {{t "components.consul.topology-metrics.status.ingress-gateway"}}
  </span>
{{else if (eq @noMetricsReason 'remote-dc')}}
  <span class="topology-metrics-error">
    {{t "components.consul.topology-metrics.status.error"}}
    <span>
      <Tooltip>{{t "components.consul.topology-metrics.status.remote-dc"}}</Tooltip>
    </span>
  </span>
{{else if @error}}
  <span class="topology-metrics-error">{{t "components.consul.topology-metrics.status.error"}}</span>
{{else}}
  <span class="topology-metrics-loader">{{t "components.consul.topology-metrics.status.loading"}}</span>
{{/if}}